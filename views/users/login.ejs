<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <h1 class="col-6 offset-2">Login on Wanderers</h1>
  <br /><br /><br /><br />
  <div class="col-8 offset-2">
    <form action="/login" method="POST" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form_label">Username</label>
        <input
          type="text"
          name="username"
          id="username"
          class="form-control"
          required
        />
      </div>
      <div class="mb-3">
        <label for="password" class="form_label">Password</label>
        <input
          type="password"
          name="password"
          id="password"
          class="form-control"
          required
        />
      </div>
      <br />
      <button class="btn btn-dark">Login</button>
    </form>
  </div>
</div>
